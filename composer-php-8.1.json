{
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": "^8.1",
        "symfony/routing": "^6.1",
        "symfony/http-foundation": "^6.1",
        "symfony/config": "^6.1",
        "symfony/yaml": "^6.1",
        "symfony/http-kernel": "^6.1",
        "vlucas/phpdotenv": "^5.5",
        "mpdf/mpdf": "^8.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.1"
    },
    "scripts": {
        "env": "php -r  \"file_exists('.env.development') || copy('.env.example', '.env.development');\"",
        "env:production": "php -r  \"file_exists('.env') || copy('.env.example', '.env');\"",
        "env:example": "php -r \"if (!file_exists('.env.example')) { file_put_contents('.env.example', \\\"VERSION=1.0\\nMODE=development\\n\\nCARPETA_PROYECTO=/\\n\\nDB_HOST=localhost\\nDB_USER=root\\nDB_PASSWORD=root_password_example\\nDB_NAME=example_db\\n\\nMAIL_PORT=587\\nMAIL_HOST=smtp.example.com\\nMAIL_USER=mail_user\\nMAIL_PASSWORD=mail_password\\n\\\"); }\"",
        "post-install-cmd": [
            "@env:example"
        ],
        "post-update-cmd": [
            "@env:example"
        ]

    }
}
